<h1>WTM Guayacanes </h1>

<ul>
<% @posts.each do |post| %>
  <li>
    <h2><%= link_to post.title, post %></h2>
    <% if can? :manage, post %>
      <p><%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
  </li>
<% end %>
</ul>


<br>
<% if can? :create, Post %>
  <%= link_to 'Crear un Post', new_post_path %>
<% end %>