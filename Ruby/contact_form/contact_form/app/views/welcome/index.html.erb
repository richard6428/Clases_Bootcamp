<h1>
	UVA Guayacanes
</h1>

<p><%= notice %></p>
<p>Envianos tu comentario, te contactaremos pronto!</p>

<%= form_tag('/welcome/contact', method: 'get') do %>

	<%= text_field_tag :name, nil, placeholder: 'Nombre' %><br>
	<%= email_field_tag :email, nil, placeholder: 'Email' %><br>
	<%= text_field_tag :subject, nil, placeholder: 'Asunto' %><br>
	<%= text_area_tag :message, nil, placeholder: 'Mensaje' %><br>
	<%= submit_tag 'Enviar' %>
<% end %>
