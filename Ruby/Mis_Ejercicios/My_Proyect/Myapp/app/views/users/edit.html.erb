<h1>Editar Usuario</h1>

<%= form_for @user do |t| %>
	<p>
		<% t.label :name, "Nombre" %><br>
		<% t.text_field :name %>
	</p>

	<p>
		<% t.label :tower, "Torre" %><br>
		<% t.text_field :tower %>
	</p>

	<p>
		<% t.label :aparment, "Apartamento" %><br>
		<% t.text_field :aparment %>
	</p>

	<p>
		<%= t.submit %>
	</p>
<%end%>